
@{
    ViewBag.Title = "Index2";
}
@using _06_DataTransfer.Models
<div class="container">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-12">                    
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                TeampData Verisi
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   @foreach (Product item in TempData["products"] as IEnumerable<Product>)
                                   {
                                       <tr>
                                           <th>@item.ProductId</th>
                                           <th>@item.Name</th>
                                       </tr>
                                   }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    @Html.ActionLink("ViewBag ve ViewData Verisi Göster","Index",null,new {@class="btn btn-success btn-block" })
                  
                </div>
            </div>
        </div>
    </div>
</div>

