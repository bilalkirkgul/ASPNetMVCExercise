@{
    ViewBag.Title = "Home Page";
}
@using _06_DataTransfer.Models
@* web.config tarafına proje model yolunu verdiğimiz için her defasında using eklemeye gerek yok..  *@


<div class="container">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-12">
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                ViewBag Verisi
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Product item in ViewBag.products)
                                    {
                                        <tr>
                                            <th style="background-color:yellow;">@item.ProductId</th>
                                            <th style="background-color:aqua;">@item.Name</th>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                ViewData Verisi
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Product item in ViewData["urunler"] as IEnumerable<Product>)
                                    {
                                        <tr>
                                            <th>@item.ProductId</th>
                                            <th>@item.Name</th>
                                        </tr>
                                    }

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">

                    @Html.ActionLink("TempData Verisi Göster","Index2",null,new {@class="btn btn-block btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>