@{
    ViewBag.Title = "Home Page";
}

@model List<Product>


<div class="container">
    <div class="row">
        <div class="col-lg-3">
          @Html.Action("CategoryListPartial","Default")
        </div>
        <div class="col-lg-9">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ProductName</th>
                        <th>Price</th>
                        <th>Category Name</th>
                        <th>Sup. CompanyName</th>
                        <th>@Html.ActionLink("Add Product","Add",null,new {@class="btn btn-success" })</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Product item in Model)
                    {
                     @Html.Partial("_ProductPartial",item)
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

