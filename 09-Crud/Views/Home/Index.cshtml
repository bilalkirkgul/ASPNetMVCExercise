@{
    ViewBag.Title = "Home Page";
}

@model List<Product>


<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <ul class="list-group">
                @foreach (Category item in ViewBag.Categories)
                {
                    <li class="list-group-item"> @Html.ActionLink(item.CategoryName, "Index", new { catID = item.CategoryID })</li>
                }
            </ul>
        </div>
        <div class="col-lg-9">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ProductName</th>
                        <th>Price</th>
                        <th>@Html.ActionLink("Add Product","Add",null,new {@class="btn btn-success" })</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Product item in Model)
                    {
                        <tr>
                            <td>@item.ProductID</td>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice</td>
                          <td><a href="/Home/Update?productID=@item.ProductID">Update</a></td>
                            @*<th>@Html.ActionLink("Update","Update",new {productID=item.ProductID },new {@class="btn btn-warning btn-block" })</th>*@
                            <th>@Html.ActionLink("Delete","Delete",new { productID=item.ProductID},new {@class="btn btn-danger btn-block" })</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

